<controls:ProWindow x:Class="ProIdTool.ImageAttachmentListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProIdTool"
        xmlns:controls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
        mc:Ignorable="d"
        Title="Attached Images" Height="180" Width="500" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <ListBox x:Name="lstImageAttachments" Grid.Row="0" TabIndex="0" Grid.RowSpan="1" Margin="0,0,0,4" />
            <Button x:Name="cmdCancel" Content="_Cancel" Grid.Row="1"
                    IsCancel="True" 
                    ToolTip="Closes the list without choosing an image to view" 
                    TabIndex="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="Auto" Margin="0,0,4,4" FontSize="14" Padding="4" />

    </Grid>
</controls:ProWindow>
